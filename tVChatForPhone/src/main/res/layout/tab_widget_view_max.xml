<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:gravity="center_vertical"
    android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/tab_image"
        android:layout_width="@dimen/width_10_80"
        android:layout_height="@dimen/width_10_80"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_buttomtab_org" />
    <TextView
        android:id="@+id/tab_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_image"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:text="@string/tab_conference_name"
        android:textColor="@drawable/selector_tab_text_color"
        android:textSize="@dimen/text_size_1" />
    <ImageView
        android:id="@+id/tab_notificator"
        android:layout_width="@dimen/conversation_view_notification_size"
        android:layout_height="@dimen/conversation_view_notification_size"
        android:layout_alignTop="@+id/tab_image"
        android:layout_toRightOf="@+id/tab_image"
        android:src="@drawable/red_nofificator" />
</RelativeLayout>