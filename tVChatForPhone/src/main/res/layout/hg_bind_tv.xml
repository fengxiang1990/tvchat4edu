<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/width_4_80"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_30_80"
        android:background="#eee" >

        <TextView
            android:id="@+id/bind_tv1"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="已绑定"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bind_tv2"
            android:layout_width="wrap_content"
            android:textColor="@color/main_color"
            android:layout_toRightOf="@+id/bind_tv1"
            android:text="小黄"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/bind_tv3"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/bind_tv2"
            android:text="电视"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>