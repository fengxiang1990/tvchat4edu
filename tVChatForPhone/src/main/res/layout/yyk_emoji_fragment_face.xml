<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/face_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_above="@+id/face_indicator"
        android:paddingTop="16dp"></android.support.v4.view.ViewPager>

    <com.bizcom.util.yykEmojiModule.EmojiIndicatorView
        android:layout_alignParentBottom="true"
        android:id="@+id/face_indicator"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="170dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/face_recent"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/specificItem_voiceDetail_phoneHistories"
            android:textColor="#9E9E9E"
            android:background="@color/common_item_text_color"/>
        <TextView
            android:id="@+id/face_first_set"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#9E9E9E"
            android:background="@color/common_item_text_color"/>
        <View
            android:id="@+id/fill_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_item_text_color"/>
    </LinearLayout>

</RelativeLayout>