<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/video_attendee_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/video_attendee_device_camera_ly"
        android:ellipsize="end"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="TextView"
        android:maxWidth="@dimen/video_attendee_device_text_max_width"
        android:textColor="@color/video_attendee_name_color_offline"
        android:textSize="@dimen/video_attendee_device_text_size" />

    <LinearLayout
        android:id="@+id/video_attendee_device_camera_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/video_attendee_device_lectrue_state_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight=".5"
            android:src="@drawable/lecture_state_applaying" />

        <ImageView
            android:id="@+id/video_attendee_device_speaker_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:src="@drawable/conf_speaker" />

        <ImageView
            android:id="@+id/video_attendee_device_camera_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:src="@drawable/camera_pressed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_gray_color_cd"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>