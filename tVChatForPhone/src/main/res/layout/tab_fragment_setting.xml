<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/common_activity_title_layout" />
    <TextView style="@style/Com_activity_title_Divider_Style" />
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/setting_com_backgroud" >
        <LinearLayout
            android:id="@+id/setting_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_activity_top_backgroud"
                android:orientation="vertical" >
                <RelativeLayout
                    android:id="@+id/setting_person_auth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="@dimen/common_margin_horizontal_border"
                        android:text="@string/authenticationActivity_titlebar_title1"
                        android:textColor="@color/common_activity_title_text_color"
                        android:textSize="@dimen/common_item_text_size" />
                    <TextView
                        android:id="@+id/setting_person_auth_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_marginEnd="@dimen/common_margin_horizontal_border"
                        android:layout_marginRight="@dimen/common_margin_horizontal_border">
                    </TextView>
                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="@dimen/common_margin_divider_left_small"
                    style="@style/Com_Normal_Divider_Style" />
                <RelativeLayout
                    android:id="@+id/setting_video_mass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="@dimen/common_margin_horizontal_border"
                        android:paddingTop="10dp"
                        android:text="@string/confs_camear_quanlity"
                        android:textColor="@color/common_activity_title_text_color"
                        android:textSize="@dimen/common_item_text_size" />
                    <TextView
                        android:id="@+id/setting_video_mass_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/common_margin_horizontal_border"
                        android:layout_marginRight="@dimen/common_margin_horizontal_border">
                    </TextView>
                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="@dimen/common_margin_divider_left_small"
                    style="@style/Com_Normal_Divider_Style" />
                <RelativeLayout
                    android:id="@+id/setting_update_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="@dimen/common_margin_horizontal_border"
                        android:paddingTop="10dp"
                        android:text="@string/setting_update_password"
                        android:textColor="@color/common_activity_title_text_color"
                        android:textSize="@dimen/common_item_text_size" />
                </RelativeLayout>
                <TextView
                    style="@style/Com_Normal_Divider_Style" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_fragment_contacts_margin_buttom"
                android:background="@color/common_activity_top_backgroud"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/setting_quit_cannel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="@dimen/common_margin_horizontal_border"
                    android:paddingTop="10dp"
                    android:text="@string/setting_logout"
                    android:textColor="@color/common_activity_title_text_color"
                    android:textSize="@dimen/common_item_text_size" />
                <TextView
                    android:layout_marginLeft="@dimen/common_margin_divider_left_small"
                    style="@style/Com_Normal_Divider_Style" />
                <TextView
                    android:id="@+id/setting_quit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="@dimen/common_margin_horizontal_border"
                    android:paddingTop="10dp"
                    android:text="@string/setting_quit_application"
                    android:textColor="@color/common_activity_title_text_color"
                    android:textSize="@dimen/common_item_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>