<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/pop_up_window_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/message_selected_pop_up_bg"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/pop_up_window_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/contact_message_pop_up_item_contact_management"
            android:visibility="gone" />
        <TextView
            android:id="@+id/pop_up_window_quit_crowd_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/crowd_detail_qulification_quit_button"
            android:visibility="gone" />
        <TextView
            android:id="@+id/pop_up_window_dissolution_crowd_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/crowd_detail_qulification_dismiss_button"
            android:visibility="gone" />
        <TextView
            android:id="@+id/pop_up_window_quit_discussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/discussion_board_detail_quit_button"
            android:visibility="gone" />
    </LinearLayout>
    <ImageView
        android:id="@+id/pop_up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pop_up_window_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/message_selected_pop_up_window"
        android:src="@drawable/message_selected_pop_up_arrow" />
</RelativeLayout>