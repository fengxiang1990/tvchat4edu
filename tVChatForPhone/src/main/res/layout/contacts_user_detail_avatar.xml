<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_user_detail_call_dialog_bg"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/contacts_user_detail_avatar_dialog_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="10dp"
        android:text="@string/contactDetail_take_camera"
        android:textColor="@color/contact_detail_button_font_color"
        android:textSize="16sp" />
    <TextView style="@style/Com_Normal_Divider_Style" />
    <TextView
        android:id="@+id/contacts_user_detail_avatar_dialog_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="10dp"
        android:text="@string/contactDetail_take_photo"
        android:textColor="@color/contact_detail_button_font_color"
        android:textSize="16sp" />
</LinearLayout>