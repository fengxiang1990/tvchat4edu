<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_activity_backgroud"
    android:orientation="vertical" >
    <include layout="@layout/common_activity_title_layout"/>
    <TextView
        style="@style/Com_activity_title_Divider_Style"/>
    <RelativeLayout
        android:id="@+id/specific_voice_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:visibility="gone" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/specific_voice_message_margin_left"
            android:layout_marginTop="10dp"
            android:text="@string/specificItem_voice_selectAll"
            android:textColor="#000000"
            android:textSize="18sp" />
        <CheckBox
            android:id="@+id/specific_voice_delete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@drawable/selector_check_box"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/specific_voice_message_margin_right"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/specific_voice_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Com_ListView_NoDivider_Style"/>
</LinearLayout>