<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorAccent"
            android:orientation="vertical" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/tab_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bt_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/scan_code"
                android:gravity="center"
                android:text="扫码绑定"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/bt_serTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/tv"
                android:gravity="center"
                android:text="输入TV号码"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />

        </LinearLayout>


    </FrameLayout>
    <!--<include-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/ll1"-->
    <!--layout="@layout/hg_tv_text_guide" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        >

        <TextView
            style="@style/H2"
            android:text="方法1:打开TV聊电视端,扫描左下角的二维码绑定" />

        <TextView
            style="@style/H2"
            android:layout_marginTop="5dp"
            android:text="方法2:输入二维码底部TV号绑定" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/tv_bd" />

        <TextView
            style="@style/H3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="绑定成功后" />

        <TextView
            style="@style/H3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="1:可以发送手机端好友到TV" />

        <TextView
            style="@style/H3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="2:还可以手机操控电视视频通话哟~" />
    </LinearLayout>

    <WebView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        android:visibility="gone" />

    <!-- <Button -->
    <!-- android:id="@+id/bt_scan" -->
    <!-- android:layout_width="match_parent" -->
