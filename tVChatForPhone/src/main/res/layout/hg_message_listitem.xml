<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/width_18_80"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="删除"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/tv_Icon"
                    style="@style/HeadPortrait"
                    fresco:roundAsCircle="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical"
                    android:paddingLeft="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_dName"
                            style="@style/H1"
                            android:gravity="start"
                            android:singleLine="true"
                            android:text="奥巴马奥巴马奥巴马奥巴马奥巴马奥巴马" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="未注册"
                            android:textColor="@color/main_color_grag"
                            android:textSize="13dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_account"
                        style="@style/H2"
                        android:gravity="start"
                        android:text="13533334444" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_dowith_call"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_date"
                            style="@style/H3"
                            android:text="08-15  9:56" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_call_status"
                                style="@style/H3"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="呼出" />

                            <TextView
                                android:id="@+id/tv_duration"
                                style="@style/H3"
                                android:gravity="end"
                                android:text="2小时55分45秒" />
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_not_owith_call"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end|center_vertical"
                        android:text="未接"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </FrameLayout>
            </LinearLayout>


        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>

    <View style="@style/UserCenterMenu_HLine" />

</LinearLayout>