<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >
        <include layout="@layout/common_activity_title_layout" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:orientation="vertical" >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >
            <include layout="@layout/common_contact_conversation_layout" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/crowd_application_item_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/crowd_application_refuse_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/detail_detail_item_margin_bottom"
                android:layout_marginLeft="@dimen/contact_detail_item_margin_left"
                android:layout_marginRight="@dimen/contact_detail_item_margin_right"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corners_of_contact_user_detail_outer"
                android:visibility="gone" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                    android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                    android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                    android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                    android:padding="10dp"
                    android:text="@string/crowd_application_addition_hint"
                    android:textColor="@color/common_item_text_color_gray"
                    android:textSize="@dimen/common_item_text_size" />
                <TextView
                    android:id="@+id/crowd_refuse_message_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                    android:layout_weight="1"
                    android:background="@null"
                    android:maxLength="30"
                    android:textColor="@color/common_item_text_color_gray"
                    android:textSize="@dimen/common_item_text_size" >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                android:layout_marginLeft="@dimen/contact_detail_2_item_margin_left"
                android:layout_marginRight="@dimen/contact_detail_2_item_margin_right"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corners_of_contact_user_detail_outer"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                        android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                        android:padding="10dp"
                        android:text="@string/crowd_application_item_no"
                        android:textColor="@color/activiy_contact_detail_item_color"
                        android:textSize="@dimen/common_item_text_size" />
                    <TextView
                        android:id="@+id/crowd_application_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                        android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                        android:padding="10dp"
                        android:text="@string/crowd_invitation_box_item_creator"
                        android:textColor="@color/activiy_contact_detail_item_color"
                        android:textSize="@dimen/common_item_text_size" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0" >
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                        android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                        android:padding="10dp"
                        android:text="@string/crowd_application_item_creator"
                        android:textColor="@color/activiy_contact_detail_item_color"
                        android:textSize="@dimen/common_item_text_size" />
                    <TextView
                        android:id="@+id/crowd_application_item_creator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                        android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                        android:padding="10dp"
                        android:text="@string/crowd_invitation_box_item_member"
                        android:textColor="@color/activiy_contact_detail_item_color"
                        android:textSize="@dimen/common_item_text_size" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0" >
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                        android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                        android:padding="10dp"
                        android:text="@string/crowd_application_brief"
                        android:textColor="@color/activiy_contact_detail_item_color"
                        android:textSize="@dimen/common_item_text_size" />
                    <TextView
                        android:id="@+id/crowd_application_brief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                        android:layout_marginLeft="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginRight="@dimen/contact_detail_2_item_margin_horizontal"
                        android:layout_marginTop="@dimen/detail_detail_2_item_margin_top"
                        android:padding="10dp"
                        android:text="@string/crowd_invitation_box_item_creator"
                        android:textColor="@color/activiy_contact_detail_item_color"
                        android:textSize="@dimen/common_item_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/crowd_application_message_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:orientation="vertical"
            android:visibility="gone" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/detail_detail_2_item_margin_bottom"
                android:layout_marginLeft="@dimen/contact_detail_2_item_margin_left"
                android:layout_marginRight="@dimen/contact_detail_2_item_margin_right"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_corners_of_contact_user_detail_outer"
                android:orientation="vertical" >
                <com.bizcom.vc.widget.cus.edittext.ClearEditText
                    android:id="@+id/crowd_application_message_et"
                    style="@style/Com_Edittext_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:hint="@string/crowd_application_hint_string"
                    android:lines="10"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>