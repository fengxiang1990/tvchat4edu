<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_bottom_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="标题"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_title2"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginLeft="10dp"
            android:text="请修改好友备注:"
            android:textColor="#3e3e3e"
            android:textSize="15sp" />


        <EditText
            android:layout_margin="15dp"
            android:padding="10dp"
            android:background="@drawable/rounded_corners_of_edit_comment_name_input_bg"
            android:id="@+id/input_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="请输入备注"
            android:textColor="#3e3e3e"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/common_gray_color_c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:padding="15dp"
                android:text="确定"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <View
                android:id="@+id/v_line"
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/common_gray_color_c0" />

            <TextView
                android:id="@+id/text_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:padding="15dp"
                android:text="取消"
                android:textColor="#b4b4b4"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>